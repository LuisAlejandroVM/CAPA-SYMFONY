{% extends('base.html.twig') %}

{% block title %}
    Listado de usuarios | Symfony
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}

{% block body %}
    <div>
        <h1>Hola a todos</h1>
        <a href="{{ path('createUser') }}" class="btn btn-primary">Registrar usuario</a>
        <a href="{{ path('report_pdf_user') }}" class="btn btn-danger">Generar PDF</a>
        <a href="{{ path('report_excel_user') }}" class="btn btn-success">Generar Excel</a>
        
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for user in listUsers %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.status }}</td>
                        <td>
                            <a href="{{ path('updateUser', {'id': user.idUser}) }}" class="btn btn-primary">Modificar</a>
                            <a href="{{ path('deleteUser', {'id': user.idUser}) }}" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script>

    </script>
{% endblock %}